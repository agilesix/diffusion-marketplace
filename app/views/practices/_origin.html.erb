<h3 id="origin" class="font-sans-xl text-bold">Origin of the Practice</h3>
<div class='grid-container-full'>
  <div class='grid-row'>
    <div class="tablet:grid-col-8">
      <div class="">
        <h3><%= @practice.origin_title %></h3>
      </div>
      <div>
        <p class="margin-0"><%= @practice.origin_story %></p>
      </div>
    </div>
    <div class="tablet:grid-col-4 display-flex flex-align-center">
      <% if @practice.origin_picture.present? %>
        <div class='grid-row flex-row flex-justify-center flex-align-center origin-picture-container overflow-hidden margin-0-auto rounded'>
          <%= image_tag @practice.origin_picture.url, class: '', alt: "#{@practice.name} origins" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
