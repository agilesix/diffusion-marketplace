<% provide :main_classes, 'bg-gray-2' %>
<% provide :footer_classes, 'bg-gray-2' %>

<% provide :head_tags do %>
  <%= javascript_include_tag 'vamc_directory', 'data-turbolinks-track': 'reload' %>
<% end %>
<%= render partial: 'vamcs/vamc_map'%>
<section class="usa-section padding-y-0 grid-col-12">
  <div class="grid-container position-relative grid-col-12">
    <div class="grid-row grid-gap">
      <div class="grid-col-12">
        <h1 class="font-sans-2x1 desktop:margin-top-5 desktop:margin-bottom-3">
          <%= @vamc.official_station_name %>
        </h1>
        <div style="width: 100%; overflow: hidden;">
          <div class="grid-col-6" style="float: left;"> This facility has created <%= @created_practices %> practices and has adopted <%= @adoptions %> practices.  It's a<% if @vamc.rurality == "U" || @vamc.rurality == "I" %>n<% end %>
            <% if @vamc.rurality == "R" %>
              rural
            <% end %>
            <% if @vamc.rurality == "U" %>
              urban
            <% end %>
            <% if @vamc.rurality == "H" %>
              highly rural
            <% end %>
            <% if @vamc.rurality == "I" %>
              isolated
            <% end %>
            <%= @vamc.fy17_parent_station_complexity_level %>
            facility and serves veterans in <%= @vamc.mailing_address_city %>.  <% unless @vamc.station_number_suffix_reservation_effective_date.blank? %>This facility opened in <%= @vamc.station_number_suffix_reservation_effective_date.to_s[0..3] %>.<% end %>
            <div class="desktop:margin-top-2 vamc-address">
              Address
            </div>
            <div class="desktop:margin-top-1">
              <%= @vamc.official_station_name %>
            </div>
            <div class="desktop:margin-top-1">
              <%= @vamc.street_address %>
            </div>
            <div class="desktop:margin-top-1">
              <%= @vamc.street_address_city %>, <%= @vamc.street_address_state %> <%= @vamc.street_address_zip_code %>
            </div>
            <div class="desktop:margin-top-2">
              <% if @vamc.station_phone_number[-1, 1] == "x" %>
                <% ph_number = @vamc.station_phone_number[0..@vamc.station_phone_number.length - 3] %>
              <% else %>
                <% ph_number = @vamc.station_phone_number %>
              <% end %>
              Main number: <a class="vamc-phone-number" href="tel:<%= ph_number %>"><%= ph_number %></a>
            </div>
          </div>
          <div id="map"></div>
        </div>
      </div>
      <h1 class="font-sans-2x1 desktop:margin-top-5 desktop:margin-bottom-3">
        Practices created at this VAMC
      </h1>
      <div style="width: 100%; overflow: hidden;">
        <div class="usa-search margin-bottom-2 vamc-search-field">
          <div role="search" class="flex-column">
          <label for="dm-practice-search-field"></label>
          <div id="search-bar-container" class="display-flex">
            <input class="usa-input" id="dm-practice-search-field" title="Type at least three characters to search." autocomplete="off" type="search" name="search">
            <button id="dm-practice-search-button" class="usa-button" type="submit" name="search-button">
              <span class="usa-search__submit-text text-bold">Search</span>
            </button>
          </div>
        </div>
       </div>
        <div class="vamc-category-select">
          <%= render partial: 'vamcs/vamc_categories_combo_box', locals: {vamc_category_selector: 'vamc_category_select'} %>
        </div>
      </div>


      <div style="width: 100%; overflow: hidden;">
        <div class="usa-search margin-bottom-2 vamc-search-field">
          # results:
        </div>
        <div class="vamc-category-select">
          <%= render partial: 'vamcs/vamc_categories_combo_box', locals: {vamc_category_selector: 'vamc_category_select'} %>
        </div>
      </div>


    </div>
  </div>
</section>

